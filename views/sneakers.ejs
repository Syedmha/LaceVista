<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Women's Sneakers | Trendy Steps</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Materialize CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/sneakers.css">
</head>
<body>

    <%- include('header') %>

  <!-- Hero Section -->
  <div class="hero-section-sneakers center-align">
    <div class="container">
      <h1>Step Up in Style</h1>
      <h4>Explore our top picks in womenâ€™s sneakers</h4>
      <a href="#guide" class="btn waves-effect waves-light">Sneaker Guide</a>
    </div>
  </div>

  <!-- Sneaker Cards Section -->
  <div class="container">
    <div class="row">

      <% const sneakers = [
        {
          name: 'Nike Air Max Bliss',
          image: '/images/Nike Air Max Bliss.jpg',
          description: 'Breathable mesh upper and iconic cushioning for all-day comfort.',
          price: '$130'
        },
        {
          name: 'Adidas Ultraboost Pulse',
          image: '/images/adidas.jpg',
          description: 'Responsive boost midsole and lightweight knit perfect for running or casual wear.',
          price: '$180'
        },
        {
          name: 'Puma Nova Glow',
          image: '/images/puma.jpg',
          description: 'Bold color-blocking meets streetwear style in this cushioned sneaker.',
          price: '$95'
        }
      ]; %>

      <% sneakers.forEach((shoe, index) => { %>
        <div class="col s12 m4">
          <div class="card">
            <div class="card-image">
              <img src="<%= shoe.image %>" alt="<%= shoe.name %>">
              <span class="card-title"><%= shoe.name %></span>
            </div>
            <div class="card-content">
              <h6><%= shoe.price %></h6>
              <p><%= shoe.description %></p>
            </div>
            <div class="card-action">
              <a class="waves-effect waves-light btn modal-trigger" href="#modal<%= index %>">View Details</a>
            </div>
          </div>
        </div>

        <!-- Modal -->
        <div id="modal<%= index %>" class="modal">
          <div class="modal-content">
            <h4><%= shoe.name %></h4>
            <img src="<%= shoe.image %>" class="responsive-img" alt="<%= shoe.name %>">
            <p><%= shoe.description %></p>
            <p><strong>Price:</strong> <%= shoe.price %></p>
          </div>
          <div class="modal-footer">
            <a href="#!" class="modal-close btn-flat">Close</a>
          </div>
        </div>
      <% }) %>

    </div>
  </div>

  <!-- Sneaker Style Guide -->
  <div class="container" id="guide">
    <h4 class="center-align">How to Style Your Sneakers</h4>
    <ul class="collection with-header">
      <li class="collection-header"><h5>Fashion Tips</h5></li>
      <li class="collection-item"><i class="material-icons left">favorite</i> Pair white sneakers with dresses for a chic day look.</li>
      <li class="collection-item"><i class="material-icons left">check</i> Wear colorful sneakers to brighten up monochrome outfits.</li>
      <li class="collection-item"><i class="material-icons left">style</i> Choose sleek, low-cut sneakers for a minimalist style.</li>
    </ul>
  </div>

  <%- include('footer') %>

  <!-- Materialize JS + jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const modals = document.querySelectorAll('.modal');
      M.Modal.init(modals);
    });
  </script>
</body>
</html>